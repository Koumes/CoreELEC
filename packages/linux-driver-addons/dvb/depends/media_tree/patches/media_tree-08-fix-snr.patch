dvb-latest: fix si2168 SNR calculation

--- a/drivers/media/dvb-frontends/si2168.c
+++ b/drivers/media/dvb-frontends/si2168.c
@@ -202,9 +202,11 @@ static int si2168_get_status(struct dvb_frontend *fe, enum fe_status *status)
 	}
 
 	if (*status & FE_HAS_LOCK) {
-		c->cnr.len = 1;
+		c->cnr.len = 2;
 		c->cnr.stat[0].scale = FE_SCALE_DECIBEL;
 		c->cnr.stat[0].svalue = cmd.args[3] * 1000 / 4;
+		c->cnr.stat[1].scale = FE_SCALE_RELATIVE;
+		c->cnr.stat[1].uvalue = cmd.args[3] * 328;
 	} else {
 		c->cnr.len = 1;
 		c->cnr.stat[0].scale = FE_SCALE_NOT_AVAILABLE;
@@ -242,8 +244,8 @@ static int si2168_read_snr(struct dvb_frontend *fe, u16 *snr)
 		goto err;
 
 	if (status & FE_HAS_LOCK) {
-		stat_snr = c->cnr.stat[0].svalue;
-		do_div(stat_snr, 100);
+		stat_snr = c->cnr.stat[0].svalue * 328;
+		do_div(stat_snr, 250);
 		*snr = (u16)stat_snr;
 	}
 
